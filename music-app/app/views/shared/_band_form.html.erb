<form action="<%= action %>" method="POST">
<input type="hidden" name="_method" method="<%= method_type %>">
<input type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

<label for="band_name">Name</label>
<input type="text"
        name="band[name]"
        id="band_name"
        value="<%= @band.name %>">
<br>

<input type="submit">
</form>
